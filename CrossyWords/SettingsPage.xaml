<Page x:Class="CrossyWords.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CrossyWords"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SettingsPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Crossy Words" TextAlignment="Center" VerticalAlignment="Center" FontSize="35" FontFamily="./#FARRAY"/>
        <Button Name="Header" Opacity="0" Click="Header_Click"/>
        <Grid Grid.Row="1" Margin="230 0 230 40" Background="LightGray">
            <StackPanel Orientation="Vertical" Margin="20">
                <TextBlock Text="Settings" TextAlignment="Center" FontSize="25" FontFamily="./#FARRAY" Margin="0 15"/>
                <TextBlock Text="Dimension:" FontSize="15" FontFamily="./#FARRAY"/>
                <ComboBox Name="dimensionComboBox" Padding="2" FontSize="20" Foreground="Black" Margin="0 5" SelectedIndex="2"/>
                
                <TextBlock Text="Category:" FontSize="15" FontFamily="./#FARRAY"/>
                <ComboBox Name="categoryComboBox" Padding="2" FontSize="20" Foreground="Black" Margin="0 4" DisplayMemberPath="En"/>
                
                <Button Name="SaveChanges" Content="Save Changes" FontSize="20" Padding="5" FontFamily="./#FARRAY" IsDefault="True" Margin="0 10" Background="White" Click="SaveChanges_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
